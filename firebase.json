{
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "rm -rf \"$RESOURCE_DIR/lib\"",
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "source": "functions"
    }
  ],
  "hosting": {
    "public": "hosting/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "predeploy": [
    "rm -rf \"$RESOURCE_DIR/dist\"",
    "npm --prefix \"$RESOURCE_DIR\" run build"
  ]
}
