{
    "name": "shareyourprpt",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },
    "postCreateCommand": "sh ./.devcontainer/postCreateCommand.sh",
    "workspaceFolder": "/workspaces/sora-firebase",
    "mounts": [
        // Improve node_modules install performance
        // https://code.visualstudio.com/remote/advancedcontainers/improve-performance#_use-a-targeted-named-volume
        "source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/functions/node_modules,type=volume"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "eslint.workingDirectories": [
                    "./functions/"
                ],
                "editor.defaultFormatter": "dbaeumer.vscode-eslint",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": true,
                    "source.organizeImports": true
                },
                "eslint.codeActionsOnSave.rules": [
                    "!@typescript-eslint/*",
                    "*"
                ],
                "typescript.tsdk": "functions/node_modules/typescript/lib",
                "eslint.validate": [
                    "javascript",
                    "typescript"
                ],
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/node_modules": false,
                    "**/.pnpm-store": false
                },
                "typescript.enablePromptUseWorkspaceTsdk": true,
                "[typescript]": {
                    "editor.tabSize": 2
                }
            },
            "extensions": [
                "dbaeumer.vscode-eslint",
                "christian-kohler.npm-intellisense",
                "unional.vscode-sort-package-json"
            ]
        }
    }
}
